@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>Confirmacion de registro!</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
     <a id="confirm-link" href="@Model.EmailConfirmationUrl" style="color: #d5c9bb">Presione aqui para confirmar su cuenta</a>
</p>
    }
    else
    {
<p>
        Por favor revise su correo! :)
</p>
    }
}

