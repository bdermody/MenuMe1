@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1>Salir</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Presione aqui para cerrar la sesion!</button>
            </form>
        }
        else
        {
            <p>Ha cerrado su sesion!.</p>
        }
    }
</header>
