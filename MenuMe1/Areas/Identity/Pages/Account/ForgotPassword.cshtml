@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row">
    <div class="col-md-4" style="margin:auto; padding-top: 50px">
        <form method="post">
            <h2>Digite su correo para cambiar la contraseña.</h2>
            <hr style="color: #d5c9bb" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="background-color: #4d6e7f; border:none;" />
                <label asp-for="Input.Email" class="form-label">Correo</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg" style="background-color: #333d45; color: #d5c9bb">Restaurar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
